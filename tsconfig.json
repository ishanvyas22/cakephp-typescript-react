{
  "compilerOptions": {
    "allowJs": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "pretty": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": "webroot/js",
    "baseUrl": ".",
    "paths": {
        "app/*": ["assets/js/*"]
    }
  },
  "include": [
      "assets/js",
      "assets/js/**/*.tsx",
      "tests/js/**/*.ts",
      "tests/js/**/*.tsx"
  ],
  "exclude": ["./node_modules"]
}
